# Database Configuration
# For development (SQLite):
# DATABASE_URL=sqlite+aiosqlite:///./dev.db
# For production (PostgreSQL - Railway provides this automatically):
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Security (REQUIRED - Generate a secure random key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Timezone
TIMEZONE=America/Lima

# CORS Origins (comma-separated list)
# Add your frontend domain(s) here
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# API Configuration
API_TITLE=GyH API
API_VERSION=1.0.0

# Environment
DEBUG=False
